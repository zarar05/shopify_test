document.addEventListener('DOMContentLoaded', function() {
  // Set up event listener for Add to Cart button
  var addToCartButton = document.getElementById('add-to-cart-button');
  var colorButtons = document.querySelectorAll('.color-button');
  var sizeDropdown = document.getElementById('size-dropdown');

  // Check if all required elements are present
  if (!addToCartButton || !sizeDropdown) return;

  // Add event listener for Add to Cart button
  addToCartButton.addEventListener('click', function(event) {
    event.preventDefault(); // Prevent default link behavior

    // Get selected color button and size
    var selectedColorButton = document.querySelector('.color-button.selected');
    var selectedSize = sizeDropdown.value;

    // Check if a color is selected
    if (!selectedColorButton) {
      alert('Please select a color.');
      return;
    }

    // Check if a size is selected
    if (!selectedSize) {
      alert('Please select a size.');
      return;
    }

    // Get the variant ID from the selected color button
    var variantId = selectedColorButton.getAttribute('data-variant-id');

    // Prepare data for the AJAX request
    var data = {
      id: variantId,
      quantity: 1, // Default quantity is 1
      properties: {
        'Size': selectedSize
      }
    };

    // Make the AJAX request to add the item to the cart
    fetch('/cart/add.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(data)
    })
    .then(response => response.json())
    .then(data => {
      console.log('Item added to cart:', data);
      // Optionally update the cart UI or show a confirmation message
    window.location.href = 'https://98304e-02.myshopify.com/cart';
    })
    .catch(error => {
      console.error('Error adding item to cart:', error);
      alert('Failed to add item to cart.');
    });
  });

  // Add event listeners for color buttons
  colorButtons.forEach(button => {
    button.addEventListener('click', function() {
      colorButtons.forEach(btn => btn.classList.remove('selected'));
      this.classList.add('selected');
    });
  });
});

